<h1><%= @merchant.name %>'s Discounts</h1>
<% @merchant.discounts.each do |discount| %>
 <section id='discount-<%= discount.id %>'>
  <%= discount.percent_off %> percent off
  <%= discount.min_threshold %> minimum items
  <%= link_to "Details", merchant_discount_path(@merchant, discount) %>
  <%= button_to "Delete", merchant_discount_path(@merchant, discount), method: :delete, params: {merchant_id: @merchant.id, discount_id: discount.id} %>
  <br>
  </section>
<% end %>

<h3>Upcoming Holidays</h3>
<% HolidayServices.new.get_holiday_name.each do |holiday| %>
  <%= holiday %><br>
<% end %><br><br><br>

<%= link_to('Create a new discount', new_merchant_discount_path(@merchant), method: :get) %><br>
